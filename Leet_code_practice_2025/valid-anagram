Link:https://leetcode.com/problems/valid-anagram

class Solution {
public:
    bool isAnagram(string s, string t) {
        transform(s.begin(),s.end(),s.begin(), ::tolower);
        transform(t.begin(),t.end(),t.begin(), ::tolower);

        if(s.length()!=t.length()){
            return 0;
        }
        sort(s.begin(),s.end());
        sort(t.begin(),t.end());

        if(s==t){
            return 1;
        }
        return 0;
    }
};
